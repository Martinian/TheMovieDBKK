<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dummy_image_like"
        android:background="@color/grey"
        android:layout_width="@dimen/icon_star_size"
        android:layout_height="@dimen/icon_star_size"
        android:layout_marginStart="@dimen/margin_size_1"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/image_like"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/image"
            android:visibility="invisible"
            android:clickable="true"
            android:focusable="true" />


    </LinearLayout>


    <TextView
        android:id="@+id/text_film_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:clickable="true"
        android:textSize="@dimen/text_size_1"
        android:layout_marginStart="@dimen/margin_size_1"
        android:focusable="true" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:clickable="true"
        android:textSize="@dimen/text_size_1"
        android:layout_marginStart="@dimen/margin_size_1"
        android:focusable="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_size_1"
        android:background="@color/black" />


</LinearLayout>