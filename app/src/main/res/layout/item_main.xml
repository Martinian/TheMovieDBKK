<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_like"
        android:layout_width="@dimen/icon_star_size"
        android:layout_height="@dimen/icon_star_size"
        android:contentDescription="@string/image"
        android:layout_marginStart="@dimen/margin_size_1"
        android:src="@mipmap/plus02" />

    <TextView
        android:id="@+id/text_film_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="film id item"
        android:textSize="@dimen/text_size_1"
        android:layout_marginStart="@dimen/margin_size_1" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="title item"
        android:textSize="@dimen/text_size_1"
        android:layout_marginStart="@dimen/margin_size_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_size_1"
        android:background="@color/black" />


</LinearLayout>